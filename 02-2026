<script>
    // --- DATASETS (Preenchidos com os dados reais dos seus relat√≥rios) ---
    const labels = ['05', '06', '07', '08', '09', '12', '13', '14', '15', '16', '19', '20', '21', '22', '23', '26', '27', '28', '29'];
    const dataFleet = [2, 4, 6, 11, 2, 8, 15, 7, 8, 10, 20, 11, 1, 4, 11, 7, 5, 12, 11];
    const dataTeams = [11, 12, 48, 6, 7, 20, 14, 11, 8, 16, 8, 12, 35, 24, 9, 7, 8, 8, 15];
    const dataBacklog = [26, 28, 24, 22, 23, 36, 53, 60, 42, 57, 56, 51, 28, 45, 57, 61, 41, 59, 76];

    // Chart Configuration Helpers
    Chart.defaults.font.family = "'Inter', sans-serif";
    Chart.defaults.color = '#64748b';
    const commonOptions = { responsive: true, maintainAspectRatio: false, animation: false, plugins: { legend: { display: false } } };

    // 1. BAR CHART EXEC (Slide 1)
    new Chart(document.getElementById('chartExecBar'), {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [
                { label: 'Teams', data: dataTeams, backgroundColor: '#0369a1', borderRadius: 4 },
                { label: 'Fleet', data: dataFleet, backgroundColor: '#7c3aed', borderRadius: 4 }
            ]
        },
        options: { ...commonOptions, scales: { x: { stacked: true, grid:{display:false} }, y: { stacked: true } } }
    });

    // 2. DOUGHNUT (Slide 1)
    new Chart(document.getElementById('chartDoughnut'), {
        type: 'doughnut',
        data: {
            labels: ['Teams', 'Fleet'],
            datasets: [{ data: [279, 155], backgroundColor: ['#0369a1', '#7c3aed'], borderWidth: 0 }]
        },
        options: { cutout: '75%', plugins: { legend: { display: false } } }
    });

    // 3. LINE EVOLUTION (Slide 2)
    new Chart(document.getElementById('chartLineEvolution'), {
        type: 'line',
        data: {
            labels: labels,
            datasets: [
                { label: 'Teams', data: dataTeams, borderColor: '#0369a1', tension: 0.3, borderWidth: 3, pointRadius: 4, pointBackgroundColor:'#fff' },
                { label: 'Fleet', data: dataFleet, borderColor: '#7c3aed', tension: 0.3, borderWidth: 3, pointRadius: 4, pointBackgroundColor:'#fff' }
            ]
        },
        options: { ...commonOptions, plugins: { legend: { display: true, position: 'top' } } }
    });

    // 4. BACKLOG AREA (Slide 3)
    new Chart(document.getElementById('chartBacklog'), {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Backlog',
                data: dataBacklog,
                borderColor: '#dc2626',
                backgroundColor: 'rgba(220, 38, 38, 0.1)',
                fill: true,
                tension: 0.4,
                borderWidth: 3,
                pointRadius: 0
            }]
        },
        options: { ...commonOptions, scales: { y: { beginAtZero: false } } }
    });

    // 5. TEAMS CATEGORIES (Slide 6)
    new Chart(document.getElementById('chartCatTeams'), {
        type: 'bar',
        indexAxis: 'y',
        data: {
            labels: ['Agendamento Web', 'Login App', 'Check-in/Out', 'Formul√°rios'],
            datasets: [{ data: [80, 50, 45, 30], backgroundColor: '#0369a1', borderRadius: 4 }]
        },
        options: commonOptions
    });

    // 6. FLEET CATEGORIES (Slide 7)
    new Chart(document.getElementById('chartCatFleet'), {
        type: 'bar',
        indexAxis: 'y',
        data: {
            labels: ['Od√¥metro', 'Diverg. Ve√≠culos', 'C√¢meras', 'Lentid√£o'],
            datasets: [{ data: [65, 40, 20, 15], backgroundColor: '#7c3aed', borderRadius: 4 }]
        },
        options: commonOptions
    });

    // Navigation Logic
    let currentSlide = 1;
    const totalSlides = 9;

    function goToSlide(n) {
        // Remove active class
        document.querySelectorAll('.slide').forEach(el => el.classList.remove('active'));
        document.querySelectorAll('.nav-btn').forEach(el => el.classList.remove('active'));
        
        // Add active class
        currentSlide = n;
        document.getElementById(`slide-${currentSlide}`).classList.add('active');
        document.querySelectorAll('.nav-btn')[currentSlide - 1].classList.add('active');
    }

    function changeSlide(dir) {
        let next = currentSlide + dir;
        if(next < 1) next = 1;
        if(next > totalSlides) next = totalSlides;
        goToSlide(next);
    }
</script>

